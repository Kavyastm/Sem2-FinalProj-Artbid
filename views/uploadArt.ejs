<%- include('layouts/innerheader'); -%>

  <body >
    <div class="main-div"> 
        <div class="logo">

        </div>
       <div class="col-xl-6 form-data" style="
       justify-content: center;
       text-align: center;
       left: 40%;
   ">
        <form method="post" action="/add-art" enctype="multipart/form-data" >
            <div class="">
                <% if (errors && errors.length> 0) { %>
                    <div class="error-message">
                        <p class="error-text">
                          <%= errors[0].msg %>
                        </p>
                    </div>
                    <% } %>
                    <% if (success && success.length> 0) { %>
                        <div class="success-message">
                            <p class="success-text">
                              <%= success[0].msg %>
                            </p>
                        </div>
                        <% } %>
            
                   
                <p class="title">Upload Art</p>
                <div class="name-field">
                    <label for="name-field">
                        <p>
                            Title : 
                        </p>
                    </label>
                    <input id="name" placeholder="Title" type="text" name="title">
                </div>
                <div class="email-field">
                    <label for="email-field">
                        <p>
                            Description : 
                        </p>
                    </label>
                    <textarea id="email" placeholder="Description" type="text" name="description"></textarea>
                </div>
                <div class="image-field">
                    <label for="image-field">
                        <p>
                            Art Image : 
                        </p>
                    </label>
                    <!-- <input id="profile_image" placeholder="" type="profile_image" name="profile_image" -->

                    <input type="file" name="profile_image" accept="image/*">
                </div>
                <div class="about-field">
                    <label for="about-field">
                        <p>
                            Min Bid : 
                        </p>
                    </label>
                    <input id="about-field" placeholder="Min Bid" type="text" name="min_bid">

                </div>
                <div class="date-field">
                    <label for="date-field">
                        <p>
                            Start Date : 
                        </p>
                    </label>
                    <input id="date-field" placeholder="Start Date" type="date" name="start_date">

                </div>
                <div class="date-field">
                    <label for="date-field">
                        <p>
                            End Date : 
                        </p>
                    </label>
                    <input id="date-field" placeholder="End Date" type="date" name="end_date">

                </div>
                <div class="time-field">
                    <label for="time-field">
                        <p>
                            Start Time : 
                        </p>
                    </label>
                    <input id="time-field" placeholder="Start Time" type="time" name="start_time">

                </div>
                <div class="time-field">
                    <label for="time-field">
                        <p>
                            End Time : 
                        </p>
                    </label>
                    <input id="time-field" placeholder="End Time" type="time" name="end_time">

                </div>
                <div class="login-btn-field">
                    <input type="submit" value="Update" class="login-btn">
                </div>
            </div>
        </form>
    </div>
    
    </div>
  </body>

  <%- include('layouts/footer'); -%>